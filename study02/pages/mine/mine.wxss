/* pages/mine/mine.wxss */
.mine{
  display: flax;
  flex-direction: column;
  margin: 0;
  padding: 0
}
.top{
  width: 100%;
  height: 320rpx;
  background-color: pink;
}
.avatar_img image{
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  position: absolute;
  left: 320rpx;
  top: 70rpx;
}
.avatar_name{
  position: absolute;
  left: 330rpx;
  top: 180rpx;
}
.order{
  width: 99%;
  height: 100rpx;
  border: 2rpx solid black;
  padding: 4rpx;
}
.left_img{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50rpx;
  border: 2rpx solid white;
  overflow: hidden;
  float: left;
  margin-left: 20rpx;
  margin-top: 5rpx;
}
.left_img image{
  width: 84rpx;
  height: 84rpx;
}
.order text{
  margin-left: 30rpx;
  line-height: 100rpx;
  font-size: 42rpx;
  float: left
}
.right_img{
  width: 84rpx;
  height: 84rpx;
  float: right;
  position: relative
}
.right_img image{
  width: 84rpx;
  height: 84rpx;
  position: absolute;
  top: 8rpx;
  left: 0
}
